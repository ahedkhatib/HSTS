                <Text fx:id="titleText" layoutX="259.0" layoutY="61.0" nodeOrientation="LEFT_TO_RIGHT"
                      strokeType="OUTSIDE" strokeWidth="0.0" text="Text" textAlignment="CENTER"
                      wrappingWidth="696.13671875">
